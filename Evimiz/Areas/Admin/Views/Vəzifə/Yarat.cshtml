@model IdentityRole
@{
    ViewData["Title"] = "Yarat";
}

<h2>Vəzifə Yarat</h2>

<form class="row" method="post">
    <div class="form-group col-12">
        <input asp-for="Name" placeholder="Vəzifı yarat" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group col-12">
        <input class=" btn btn-click btn-block btn-success" type="submit" />
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

