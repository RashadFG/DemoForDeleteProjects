@model IEnumerable<News>

@{
    ViewData["Title"] = "Xəbərlər";
}

<section id="News">
    <div class="container ">
        <div class="row mt-2">
            <div class="col-12">
                <h3>Xəbərlər</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            @if (Model.Count() != 0)
            {
                @foreach (var item in Model)
                {
                    <a asp-controller="Xəbərlər" asp-action="Haqqında" asp-route-id="@item.Id" class="col-xl-4 col-lg-6 col-sm-10 col-12" data-aos="flip-up">
                        <div class="new-item">
                            <!-- 60 heading -->

                            <div class="overlay  d-flex align-items-end">
                                <div class="new-properties ">
                                    <h6 class="text-right ">
                                        @if (item.Title.Length > 50)
                                        {
                                            @item.Title.Substring(0, 50);
                                        }
                                        else
                                        {
                                            @item.Title
                                        }
                                    </h6>
                                    <p class="text-right">
                                        @if (item.Info.Length > 255)
                                        {
                                            @item.Info.Substring(0, 255);
                                        }
                                        else
                                        {
                                            @item.Info
                                        }
                                    </p>
                                    <div class="text-right text-white">
                                        <span class="ml-2 New-Date all">
                                            <i class="far fa-calendar-alt"></i>
                                            @String.Format("{0:MM/dd/yyyy}", item.PublishDate)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <img src="~/Images/News/@item.ImageUrl" class="img-fluid w-100">
                        </div>
                    </a>
                }
            }
            else
            {
                <h4 style="font-weight: bold" class="error-h4">Hal hazırda xəbər yoxdur</h4>
            }
        </div>
    </div>
</section>

